<% if event.favorited_by?(current_customer) %>
  <%= link_to event.event_favorites.count, event_favorite_events_path(current_customer), method: :delete, remote: true, class: "fas fa-heart text-danger" %>
<% else %>
  <%= link_to event.event_favorites.count, event_favorite_events_path(current_customer), method: :post, remote: true, class: "far fa-heart text-secondary" %>
<% end %>