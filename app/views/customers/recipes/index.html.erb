<div class="container">
  <div class="row">
    <div class="col-10 mx-auto">
      <div class="card-deck">
        <% @recipes.each do |recipe| %>
          <div class="card w-25 mt-4">
            <%= link_to recipe_path(recipe.id) do %>
              <%= attachment_image_tag recipe, :recipe_image, class:"card-img-top" %>
            <% end %>
            <div class="card-body">
              <h5 class="card-title">
                <%= link_to(recipe_path(recipe.id), class:"text-dark") do %>
                  <%= recipe.title %>
                <% end %></h5>
            </div>
          </div>
        <% end %>
        <%= paginate @recipes %>
      </div>
    </div>
  </div>
</div>