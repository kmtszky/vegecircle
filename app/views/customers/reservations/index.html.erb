<div class="container">
  <div class="row">
    <div class="col-11 col-md-10 mx-auto">
      <h4 class="mb-4">農業体験の予約一覧</h4>

      <nav>
        <div class="nav nav-tabs" id="nav-tab" role="tablist">
          <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true"><h6>現在予約中の農業体験一覧</h6></a>
          <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false"><h6>過去の予約一覧</h6></a>
        </div>
      </nav>
      <div class="tab-content" id="nav-tabContent">
        <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
          <div class="mt-4">
            <% if @reservations.count == 0 %>
              <h6>予約している農業体験はありません</h6>
            <% else %>
              <%= render 'customers/reservations/reserved_index', reservations: @reservations %>
            <% end %>
          </div>
        </div>
        <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
          <div class="mt-4">
            <% if @past_reservations.count == 0 %>
              <h6>過去に参加した農業体験はありません</h6>
            <% else %>
              <%= render 'customers/reservations/reserved_index', reservations: @past_reservations %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>