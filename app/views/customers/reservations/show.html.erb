<div class="container">
  <div class="row">
    <div class="col-10 col-md-8 mx-auto mb-2 event">
      <%= render 'customers/reservations/show', event: @event, schedule: @schedule, reservation: @reservation %>
      <%= render "farmers/events/access", event: @event %>
      <div class="form-row form-group mt-3 d-flex">
        <%= link_to "イベント詳細ページへ", event_schedule_path(@event, @schedule), class: "btn btn-success mr-3" %>
        <% if @schedule.date > Date.current %>
          <%= link_to "予約をキャンセルする", event_schedule_reservation_path(event_id: @event.id, schedule_id: @schedule.id, id: @reservation.id), method: :delete, data: { confirm: "【キャンセルポリシーを事前に確認してください】予約をキャンセルしますか？" }, class: "btn btn-danger" %>
        <% end %>
      </div>
    </div>
  </div>
</div>