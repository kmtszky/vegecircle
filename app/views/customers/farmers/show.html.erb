<div class="container">
  <div class="row">
    <div class="col-12 col-md-5 offset-md-2 my-2">
      <table>
        <tbody>
          <tr>
            <td rowspan="3"><%= attachment_image_tag @farmer, :farmer_image, :fill, 100, 100, class: "rounded-circle", fallback: asset_path('no_images/no_image_md.png'), size: '100x100' %></td>
            <td class="cell-pl"><%= @farmer.farm_address %></td>
          </tr>
          <tr>
            <td class="cell-pl"><h3><%= @farmer.name %></h3></td>
          </tr>
          <tr>
            <td class="cell-pl">評価（〇件）</td>
          </tr>
        </tbody>
      </table><br>
      <%= @farmer.introduction %>
      <% if customer_signed_in? %>
        <div class="follow-btn-<%= @farmer.id %>">
          <%= render "customers/follows/follow", farmer: @farmer %>
        </div>
      <% end %>
    </div>
    <div class="col-12 col-md-5 mr-auto my-2">
      <%= attachment_image_tag @farmer, :image_1, class: "farm_pictures", fallback: asset_path('no_images/no_image_md.png'), size: '300x300' %>
    </div>
  </div>

  <div class="row">
    <div class="col-12 col-md-5 offset-md-2 my-2">
      <h6>直売所へのアクセス</h6>
      <%= @farmer.store_address %>
    </div>
    <div class="col-12 col-md-4 mr-auto my-2">
      <h6>お知らせ</h6>
      <%= render 'farmers/news/index', news: @news_last3, news_left: @news_left %>
    </div>
  </div>

  <div class="row">
    <div class="col-12 col-md-8 mx-auto mt-3">
      <h6>予約受付中の農業体験</h6>
      <%= render 'farmers/events/index', events: @events %>
    </div>
  </div>

  <div class="row">
    <div class="col-12 col-md-8 mx-auto mt-3">
      <h6>農家ご飯</h6>
      <%= render 'farmers/recipes/index', recipes: @recipes %>
      <% if @farmer.recipes.count >= 5 %>
        <%= link_to ">> もっと見る", farmers_recipe_index_path, class: "ml-auto text-dark" %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-12 col-md-8 mx-auto">
      <h6 class="text-center">この農家さんに関するレビュー</h6>
      <div class="chats">
        <%= render 'farmers/chats/index', chat_last5: @chat_last5, chat_left: @chat_left %>
      </div>
      <% if customer_signed_in? %>
        <%= form_with model: [:customers, @evaluation], local: true do |f| %>
          <div class="form-group">
            <%= f.text_area :comment, class: "form-control form-control-sm" %>
            <%= f.attachment_field :review_image, class: "form-control-file" %>
          </div>
          <%= f.submit '送信', class: "btn btn-sm btn-success" %>
        <% end %>
      <% end %>
    </div>
  </div>

</div>