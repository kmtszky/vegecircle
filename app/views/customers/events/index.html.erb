<div class="container">
  <div class="row">
    <div class="col-11 col-md-10 mx-auto">
      <h4 class="mb-4">予約受付中の農業体験一覧</h4>
    </div>
    <div class="col-10 mx-auto col-md-3 offset-md-1 side-bar">
      <h6 class="text-center">エリアから探す</h6>
      <%= render 'searches/event_area', northern: @northern, kanto: @kanto, middle: @middle, kansai: @kansai, western: @western, southern: @southern %>
    </div>
    <div class="col-md-8 main-content d-none d-md-block">
      <div class="form-row text-left mb-3">
        <%= render 'searches/event_search' %>
        <%= render 'searches/eventdate_search' %>
        <%= render 'searches/event_sort' %>
      </div>
      <div id="index_all">
        <%= render 'customers/events/index', events: @events %>
        <%= paginate @events %>
      </div>
      <div id="index_sort">
        <%= render 'customers/events/index', events: @records %>
        <%= paginate @events %>
      </div>
    </div>
  </div>
</div>