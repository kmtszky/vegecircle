<div class="container">
  <div class="row">
    <div class="col-12 col-md-5 mx-auto p-4 text-center sign">

    <h4>管理者ログイン</h4><br>

    <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td align="right"><%= f.label :email, "メールアドレス" %></td>
            <td align="left"><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-sm" %></td>
          </tr>
          <tr>
            <td align="right"><%= f.label :password, "パスワード" %></td>
            <td align="left"><%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-sm" %></td>
          </tr>
          <tr>
            <td colspan="2">
              <% if devise_mapping.rememberable? %>
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, "ログイン情報を記録する" %>
              <% end %>
            </td>
          </tr>
          <tr>
            <td colspan="2">
              <%= f.submit "ログイン", class: "btn btn-sm btn-secondary" %>
            </td>
          </tr>
        </tbody>
      </table>
    <% end %>
    </div>
  </div>
</div>