<div class="d-flex flex-row flex-wrap">
  <% if events.blank? %>
    <p>予約受付中の農業体験はありません</p>
  <% else %>
    <% events.each do |event| %>
      <div class="list-box mr-4">
        <div class="image_top">
          <%= link_to farmers_event_path(event.id) do %>
            <%= attachment_image_tag event, :plan_image, :fill, 100, 70, class: "card-img-top" %>
          <% end %></div>
        <div class="title">
          <%= link_to farmers_event_path(event.id) do %>
            <h6 class="text-body"><%= event.title %></h6>
            <span class="text-body"><%= event.location.match(/^.{2,3}[都道府県]/).to_s %></span><br>
            <span class="text-body"><%= event.start_date.strftime('%m/%d') %>～<%= event.end_date.strftime('%m/%d') %></span>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>