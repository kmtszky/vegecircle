<div class="search-form form-inline mr-3">
  <%= form_with url: search_path, method: :get, local: true do |f| %>
    <%= f.date_field :event_date, placeholder: "Search", class: "form-control form-control-sm" %>
    <%= f.hidden_field :model, :value => 'event' %>
    <%= f.button :type => "submit", style: 'border-style: none;', class: "btn btn-sm btn-warning" do %>
      <i class="fas fa-search"></i>
    <% end %>
  <% end %>
</div>