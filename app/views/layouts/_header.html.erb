            <li><%= link_to ' 農業体験', events_path, class: "nav-link text-dark fas fa-carrot" %></li>
            <li><%= link_to ' ログイン', new_customer_session_path, class: "nav-link text-dark fas fa-user" %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>