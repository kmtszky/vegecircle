<header class="sticky-top">
  <nav class="navbar navbar-light navbar-expand-md">
    <div class="container">
      <a class="nav-link", href="/"><%= image_tag asset_path('logo/header_logo.png'), class: "header_logo" %></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <% if customer_signed_in? %>
          <!--customerのヘッダー-->
            <li><%= link_to ' マイページ', profiles_path(current_customer), class: "nav-link text-dark fas fa-user" %></li>
            <li><%= link_to ' 予約', reservations_path, class: "nav-link text-dark fas fa-pen" %></li>
            <li><%= link_to ' フォロー', follows_path, class: "nav-link text-dark fas fa-user-check" %></li>
            <li><%= link_to ' お気に入り', customer_favorites_path, class: "nav-link text-dark fas fa-heart" %></li>
            <li><%= link_to ' ログアウト', destroy_customer_session_path, method: :delete, class: "nav-link text-dark fas fas fa-walking" %></li>
          <% elsif farmer_signed_in? %>
          <!--farmerのヘッダー-->
            <li><%= link_to ' ログアウト', destroy_admin_session_path, method: :delete, class: "nav-link text-dark fas fas fa-walking" %></li>
          <% elsif admin_signed_in? %>
          <!--adminのヘッダー-->
            <li><%= link_to ' ログアウト', destroy_admin_session_path, method: :delete, class: "nav-link text-dark fas fa-walking" %></li>
          <% else %>
          <!--ログイン前のヘッダー-->
            <li><%= link_to ' vegecircleについて', about_path, class: "nav-link text-dark fas fa-seedling" %></li>
